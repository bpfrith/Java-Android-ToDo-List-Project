<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.com.codeclan.example.todo_list">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ActivityList"
            android:label="@string/main_screen_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity android:name=".ActivityTask"
            android:label="@string/app_name"
            android:parentActivityName=".ActivityList">

        </activity>

        <activity android:name=".ActivityNewTask"
            android:label="@string/new_task"
            android:parentActivityName=".ActivityList">

        </activity>

        <activity android:name=".ActivityEditTask"
            android:label="@string/edit_task"
            android:parentActivityName=".ActivityList">

        </activity>

    </application>

</manifest>
